{% extends 'AdminBundle::base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body %}

    <div class="container-fluid">

        <div class="container-fluid">
            <div class="page-header mt_0">
                <h1 class="mt_0">
                    {{ 'reklamy.reklamy'|trans }}
                </h1>
            </div>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <tbody>
            <tr>
                <th>ID</th>
                <th>{{ 'admin.opis'|trans }}</th>
                <th>{{ 'admin.edytuj'|trans }}</th>
            </tr>
            {% for advert in adverts %}
                <tr>
                    <td>{{ advert.id }}</td>
                    <td>{{ advert.description }}</td>
                    <td>
                        <form onchange="this.submit()" action="{{ path("admin_general_advert_edit", {id: advert.id}) }}" method="get">
                            <select class="form-control input-sm" name="language">
                                <option>{{ 'ogolne.reklamy.wybierz_jezyk'|trans }}</option>
                                {% for lang in langs %}
                                    <option value="{{ lang.id }}">{{ lang.shortcut|upper }}</option>
                                {% endfor %}
                            </select>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}