{% extends 'AdminBundle::base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body %}

    <div class="container-fluid">

        <div class="page-header ">
            <h1>{{ report.title }}</h1>
        </div>

        {{ form_start(form) }}
        <div class="input-group">
            {{ form_widget(form.login) }}
            <span class="input-group-btn">
                <button class="btn btn-success" type="submit">Nadaj dostęp</button>
            </span>
        </div>
        {{ form_end(form) }}
        <table class="table table-bordered table-striped table-hover">
            <tbody>
            <tr>
                <th>Login</th>
                <th>Nazwa</th>
                <th>Akcja</th>
            </tr>
            {% for user in report.users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.fullname }}</td>
                    <td>
                        <a href="{{ path('admin_reports_users_delete', {id: report.id, user_id: user.id}) }}" onclick="return confirm('Czy na pewno chcesz usunąć dostęp do raportu dla tego użytkownika?')" class="btn btn-xs btn-danger">{{ 'admin.usun'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}