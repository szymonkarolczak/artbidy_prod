{% extends 'AdminBundle::base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body %}


    <div class="container-fluid">

        <div class="container-fluid">
            <div class="page-header mt_0">
                <h1 class="mt_0">{{ 'licytacja.page.title.notice'|trans({},'messages') }} - ID {{ notice.id }}</h1>
            </div>
        </div>
        <div class="container-fluid">
                    <a onclick="return confirm('{{ 'aktualnosci.czy_na_pewno_usunac'|trans }}')" href="{{ path("admin_notice_delete", {id: notice.id}) }}" class="btn btn-xs btn-danger pull-right">{{ 'admin.usun'|trans }}</a>
        </div>
        <table class="table table-striped table-hover">
            <tr>                
                <td><b>{{ 'licytacja.tabel.title.time'|trans({},'messages') }}</b></td>
                <td>{{ notice.CreatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>                
                <td><b>{{ 'licytacja.tabel.title.author'|trans({},'messages') }}</b></td>
                <td> <a href="{{ path('admin_users_edit', {id: notice.author.id}) }}" class="btn btn-xs btn-primary"> {{ notice.author.fullname }}</a> </td>
            </tr>
            <tr>                
                <td><b>{{ 'licytacja.tabel.title.recipient'|trans({},'messages') }}</b></td>
                <td> <a href="{{ path('admin_users_edit', {id: notice.recipient.id}) }}" class="btn btn-xs btn-primary"> {{ notice.recipient.fullname }}</a> </td>
            </tr>
            <tr>
                <td><b>{{ 'licytacja.tabel.title.status'|trans({},'messages') }}</b></td>
                <td>{% if notice.IsReaded %} {{ 'notice.statusese.readed'|trans }} {% else %} {{ 'notice.statusese.new'|trans({},'messages') }}{% endif %}</td>
            </tr>
            <tr>
                <td><b>{{ 'licytacja.tabel.title.title'|trans({},'messages') }}</b></td>
                <td>{{ notice.title }}</td>
            </tr>
            <tr>
                <td><b>{{ 'licytacja.tabel.title.object'|trans({},'messages') }}</b></td>
                <td>{{ notice.title }}</td>                
            </tr>
            <tr>
                <td colspan="2"><b>{{ 'licytacja.tabel.title.content'|trans({},'messages') }}</b></td>
            </tr>
            <tr>
                <td colspan="2">{{ notice.content|raw }}</td>
            </tr>
        </table>

    </div> <!-- /container -->

{% endblock %}