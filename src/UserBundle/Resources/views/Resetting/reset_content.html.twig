{% trans_default_domain 'FOSUserBundle' %}

<div class="container">

    <div class="page-header mt_0">
        <h1 class="mt_0">{{ 'user.resetuj_haslo'|trans([], 'messages') }}</h1>
    </div>

    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset form-horizontal' } }) }}

        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-success" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
            </div>
        </div>
    {{ form_end(form) }}

</div>