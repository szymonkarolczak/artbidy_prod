{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="page-header mt_0">
            <h1 class="mt_0">{{ 'profile.ustawienia.wizytowka'|trans }}</h1>
        </div>
        
        <div class="row">
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked"> 
                    <li role="presentation"><a target="_blank" href="{{ path("profile", {id: app.user.id, prefix: app.user.profilePrefix, slug: app.user.profileSlug|slugify}) }}">{{ 'main.podglad'|trans }}</a></li>
                    <li role="presentation"{% if app.request.attributes.get('_route') == 'profile_card_general' %} class="active"{% endif %}><a href="{{ path("profile_card_general") }}">{{ 'profile.ustawienia.ogolne'|trans }}</a></li>
                    <li role="presentation"{% if app.request.attributes.get('_route') == 'profile_card_socialmedia' %} class="active"{% endif %}><a href="{{ path("profile_card_socialmedia") }}">{{ 'main.social_media'|trans }}</a></li>
                </ul>
            </div>
            <div class="col-md-9">
                {% block settings %}
                {% endblock %}
            </div>
        </div>

    </div>
{% endblock %}
